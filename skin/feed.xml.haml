%rss(version="2.0" xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:wfw="http://wellformedweb.org/CommentAPI/" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:atom="http://www.w3.org/2005/Atom")
  %channel
    %title srid.name
    %atom:link(href="http://srid.name/feed.xml" rel="self" type="application/rss+xml")
    %link http://srid.name/
    %description Updates from Sridhar
    %pubDate&= formatRFC822Date(new Date())
    %generator http://github.com/creationix/wheat
    %language en
    :each article in articles
      %item
        %title&= article.title
        %link&= "http://srid.name/" + article.name
        %comments&= "http://srid.name/" + article.name + "#disqus_thread"
        %pubDate&= formatRFC822Date(article.date)
        %guid(isPermaLink="true")&= "http://srid.name/" + article.name
        %description&= markdownEncode(article.markdown)
        %author&= article.author && (article.author.email + " (" + article.author.name + ")")
